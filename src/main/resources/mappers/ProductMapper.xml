<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="ovchip.dao.ProductDAO">

    <resultMap id="ProductResultMap" type="ovchip.domain.Product">
        <id property="productNummer" column="product_nummer"/>
        <result property="naam" column="naam"/>
        <result property="beschrijving" column="beschrijving"/>
        <result property="prijs" column="prijs"/>
    </resultMap>

    <insert id="save" parameterType="ovchip.domain.Product">
        INSERT INTO product (product_nummer, naam, beschrijving, prijs)
        VALUES (#{productNummer}, #{naam}, #{beschrijving}, #{prijs})
    </insert>

    <update id="update" parameterType="ovchip.domain.Product">
        UPDATE product
        SET naam = #{naam}, beschrijving = #{beschrijving}, prijs = #{prijs}
        WHERE product_nummer = #{productNummer}
    </update>

    <delete id="delete" parameterType="ovchip.domain.Product">
        DELETE FROM product WHERE product_nummer = #{productNummer}
    </delete>

    <select id="findById" parameterType="int" resultMap="ProductResultMap">
        SELECT * FROM product WHERE product_nummer = #{productNummer}
    </select>

    <select id="findAll" resultMap="ProductResultMap">
        SELECT * FROM product
    </select>
</mapper>